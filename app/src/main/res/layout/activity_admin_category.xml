<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"

        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/tshirts"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginRight="1dp"
            />
        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/sports"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            />
        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/female_dresses"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginStart="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/sweather"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginRight="1dp"
            />
        <ImageView
            android:id="@+id/glasses"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/glasses"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginRight="1dp"
            android:layout_marginStart="1dp"
            />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/purses_bags"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginStart="1dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/hats"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginEnd="1dp"
            />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/shoess"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            />
        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/headphoness"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginStart="1dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/laptops"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginEnd="1dp"
            />
        <ImageView
            android:id="@+id/watches"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/watches"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            />

        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/mobiles"
            android:contentDescription="TODO"
            app:civ_border_width="1dp"
            app:civ_border_color="#333333"
            android:background="@drawable/product_backgroud"
            android:layout_marginStart="1dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:padding="10dp"/>

</RelativeLayout>